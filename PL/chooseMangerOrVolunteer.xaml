<Window x:Class="PL.chooseMangerOrVolunteer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Style="{StaticResource BackGroundPic}"
        Icon="{StaticResource WindowIcon}"
        ResizeMode="NoResize"
        Title="chooseMangerOrVolunteer" Height="250" Width="300">
    <StackPanel >
        <Label Content="Select Role"
                      FontSize="30"
                      HorizontalAlignment="Center"/>

        <Button Content="Volunteer"
                    Click="BtnVolunteer_Click"
                    Width="230"
                    Height="70"/>

        <Button Content="Manager"
                    Width="230"
                    Height="70"
                    Click="BtnManger_Click"
                    Background="DarkRed"/>
    </StackPanel>
</Window>
