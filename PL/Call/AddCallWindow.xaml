<Window x:Class="PL.Call.AddCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="Add Call" Height="350" Width="600"
        Icon="{StaticResource WindowIcon}"
        Style="{StaticResource BackGroundPic}"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--title for the window-->
        <Label Content="Call Details" 
            Grid.ColumnSpan="2" HorizontalAlignment="Center"
            FontSize="30" Foreground="CadetBlue"
            />
        
        <!-- Call Type -->
        <Label Content="Call Type:" 
           Grid.Row="1" Grid.Column="0" 
           VerticalAlignment="Center" 
           Margin="5,0,5,0"/>
        <ComboBox Text="{Binding CurrentCall.CType}" 
              ItemsSource="{Binding Source={StaticResource CallTypeCollectionKey}}"
         Grid.Row="1" Grid.Column="1" 
         Margin="5,5,5,5" Grid.ColumnSpan="2"/>

        <!-- Description -->
        <Label Content="Description:" 
           Grid.Row="2" Grid.Column="0" 
           VerticalAlignment="Top" 
           Margin="5,5,5,0"/>
        <TextBox Text="{Binding CurrentCall.Description}" 
         Grid.Row="2" Grid.Column="1" 
         Margin="5,5,5,5"
         Height="60" Grid.ColumnSpan="2"/>

        <!-- Address -->
        <Label Content="Full Address:" 
           Grid.Row="3" Grid.Column="0" 
           VerticalAlignment="Center" 
           Margin="5,0,5,0"/>
        <TextBox Text="{Binding CurrentCall.FullAddress}" 
         Grid.Row="3" Grid.Column="1" 
         Margin="5,5,5,5" Grid.ColumnSpan="2"/>


        <!-- Max Time -->
        <Label Content="Max Time:" 
           Grid.Row="4" Grid.Column="0" 
           VerticalAlignment="Center" 
           Margin="5,0,5,0"/>
        <DatePicker SelectedDate="{Binding CurrentCall.MaxTime}" 
            Grid.Row="4" Grid.Column="1" 
            Margin="5,5,5,5" Grid.ColumnSpan="2"/>

        <!--ADD Button-->
        <Button Content="Add" 
                Click="btnAddNew_Click"
                Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Center" Height="50" Width="100"/>
    </Grid>
</Window>
